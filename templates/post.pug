extends base.pug

block globals
    - const { publishDate, tags, title } = data.frontmatter;

block append body
    | !{contents}
    h6 Tags
    p
        - if (!tags.length)
            code [none]
        each tag in tags
            code.tag.
                [#[a(href=`/tags/${tag}/`) #{tag}]]
    h6 Published
    p
        code= publishDate || "null"
